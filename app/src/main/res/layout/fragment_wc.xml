<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/top_place"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
    <ScrollView
        android:id="@+id/llNoDevice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgNoDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:src="@drawable/nodevice" />

            <Button
                android:id="@+id/btnNoDevice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_layer_list"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:text="@string/no_devices"
                android:textColor="#919191"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"/>
        <!-- 开灯(布尔可写) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="21sp"
                android:id="@+id/tv1"
                android:layout_marginStart="40dp"
                android:text="开灯" />



            <Switch
                android:id="@+id/sw_bool_LED_OnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="28dp"
                android:switchMinWidth="46dp"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb"
                android:thumbTextPadding="15dp"
                android:track="@drawable/track" />

        </RelativeLayout>


        <!-- 开关窗(布尔可写) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="21sp"
                android:id="@+id/tv2"
                android:layout_marginStart="40dp"
                android:text="开关窗" />



            <Switch
                android:id="@+id/sw_bool_Win_OnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="28dp"
                android:switchMinWidth="46dp"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb"
                android:thumbTextPadding="15dp"
                android:track="@drawable/track" />

        </RelativeLayout>


        <!-- 开关窗帘(布尔可写) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="21sp"
                android:id="@+id/tv3"
                android:layout_marginStart="40dp"
                android:text="开关窗帘" />



            <Switch
                android:id="@+id/sw_bool_Curtain_OnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="28dp"
                android:switchMinWidth="46dp"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb"
                android:thumbTextPadding="15dp"
                android:track="@drawable/track" />

        </RelativeLayout>

        <!-- 厕所抽风机(布尔可写) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="21sp"
                android:id="@+id/tv4"
                android:layout_marginStart="40dp"
                android:text="厕所抽风机" />



            <Switch
                android:id="@+id/sw_bool_wc_fan_OnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="28dp"
                android:switchMinWidth="46dp"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/thumb"
                android:thumbTextPadding="15dp"
                android:track="@drawable/track" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>