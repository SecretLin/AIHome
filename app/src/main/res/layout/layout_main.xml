<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:id="@+id/main"

    >


    <include layout="@layout/top_main"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="北京市"
            android:id="@+id/tvLoc"
            android:textColor="#000"
            android:textSize="25sp"
            />

        <!--<ImageView-->
            <!--android:layout_width="228dp"-->
            <!--android:layout_height="228dp"-->
            <!--android:src="@mipmap/circle"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="54dp"-->
            <!--/>-->

        <com.example.secret.ai10.view.RoundProgressBar1
            android:layout_width="188dp"
            android:layout_height="188dp"
            app:centreColor="#fff"
            app:progress="19"
            app:textIsDisplayable="false"
            app:ringColor="#fff"
            app:ringProgressColor="#afdff9"
            app:startAngle="90"
            app:ringWidth="2dp"
            app:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="19"
            android:id="@+id/tvTemp"
            android:textSize="65sp"
            android:textColor="#000000"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="110dp"
            android:fontFamily="sans-serif-condensed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°C"
            android:textSize="45sp"
            android:textColor="#000000"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="128dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度:92%"
            android:id="@+id/tvHum"
            android:textSize="17sp"
            android:textColor="#505050"
            android:layout_below="@+id/tvTemp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="120dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCond"
            android:text="雷阵雨"
            android:layout_below="@+id/tvTemp"
            android:layout_marginTop="2dp"
            android:textSize="17sp"
            android:layout_marginStart="9dp"
            android:textColor="#505050"
            android:layout_toEndOf="@+id/tvHum"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="监测"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:id="@+id/tvMonitor"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/line1"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="42dp"
            android:layout_toStartOf="@+id/tvMode"

            android:layout_marginEnd="20dp"
            android:background="#6A9EE5"
            android:id="@+id/line1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模式"
            android:id="@+id/tvMode"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:background="#6A9EE5"
            android:id="@+id/line2"
            android:layout_toEndOf="@+id/tvMode"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用"
            android:id="@+id/tvConstant"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_toEndOf="@+id/line2"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


</LinearLayout>
