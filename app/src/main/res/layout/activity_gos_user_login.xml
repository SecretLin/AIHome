<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <include layout="@layout/top"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="273dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/et_bg_rect"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/phone" />

            <EditText
                android:id="@+id/etName"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="19dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/name_hint"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray_light"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="273dp"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/et_bg_rect"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/password" />

            <EditText
                android:id="@+id/etPsw"
                style="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/text_gray_light"
                android:textSize="14sp" />

            <!--<CheckBox-->
                <!--android:id="@+id/cbLaws"-->
                <!--android:layout_width="25dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:layout_marginBottom="15dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:background="@drawable/checkbox_laws_selector"-->
                <!--android:button="@null" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/tvForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginRight="45dp"
            android:layout_marginTop="29dp"
            android:text="@string/forget_password"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="29dp"
            android:text="@string/register"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="273dp"
            android:layout_height="43dp"
            android:background="#53A0DA"
            android:textColor="#fff"
            android:layout_below="@+id/tvForget"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/login" />



        <!--<com.example.secret.ai10.view.DotView-->
            <!--android:id="@+id/dotView1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_marginBottom="80dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="15dp" />-->

        <TextView
            android:id="@+id/tvPass"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/pass" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPass"
            android:layout_marginTop="39dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            >

            <LinearLayout
                android:id="@+id/llQQ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="66dp"

                    android:layout_marginEnd="30dp"
                    android:src="@drawable/qq" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="6dp"-->
                <!--android:text="@string/QQ"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="12sp" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWechat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/wechat" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="6dp"-->
                <!--android:text="@string/Wechat"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="12sp" />-->
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

